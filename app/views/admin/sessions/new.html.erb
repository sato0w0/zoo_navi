<div class="container">
  <div class="row mt-4">
    <div class="col-12 text-center">
      <h3>管理者ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="text-center form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインしたままにする %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>