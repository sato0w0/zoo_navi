<div class="container pt-5">
  <div class="row">
    <div class="col-12">
      <h3><%= "#{@user.nickname}さんの会員情報編集" %></h3>
    </div>
  </div>

  <div class="row pt-4">
    <div class="col-12">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :会員ID %>
          <%= @user.id %>
        </div>

        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :会員ステータス %>
          <%= f.radio_button :is_active, true, id: "is_active_true" %>
          <%= f.label :is_active_true, "有効" %>
          <%= f.radio_button :is_active, false, id: "is_active_false" %>
          <%= f.label :is_active_false, "退会" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
          <%= link_to '保存せずに戻る', admin_user_path(@user.id), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>