<div class="container">
  <div class="mt-4">
    <div class="text-center">
      <h4 class="col-md-4 bg-light">動物の新規登録</h4>
    </div>
  </div>
  <div class="table-responsive">
    <%= form_with model: @animal, url: admin_animals_path do |f| %>
      <table class="col-10 mt-5 mx-auto">
        <tr>
          <th><%= f.label :"動物画像" %></th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label :"動物名" %></th>
          <td><%= f.text_field :name, placeholder: "動物名", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"種類" %></th>
          <td><%= f.collection_select :animal_type_id, AnimalType.all, :id, :name, include_blank: "選択してください" %></td>
        </tr>
        <tr>
          <th><%= f.label :"生息地" %></th>
          <td><%= f.text_field :habitat, placeholder: "生息地", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"体長" %></th>
          <td><%= f.text_field :body_length, placeholder: "体長", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"体重" %></th>
          <td><%= f.text_field :body_weight, placeholder: "体重", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"特徴" %></th>
          <td><%= f.text_field :feature, placeholder: "特徴", class: "form-control" %></td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>