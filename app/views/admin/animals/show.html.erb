<div class="container pt-5">
  <div class="row">
    <div class="col-12">
      <%= render "admin/animal_types/search_animal_type", animal_types: AnimalType.all %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <%= image_tag @animal.get_image_fill(1000, 500), class: "img-fluid" %>
    </div>
  </div>

  <div class="row pt-4">
    <div class="col-12 text-center">
      <h2><%= @animal.name %></h2>
    </div>
  </div>

  <div class="row pt-5">
    <div class="col-12">
      <table class="table">
        <tr>
          <th style="width: 20%;">生息地</th>
          <td><%= @animal.habitat %></td>
        </tr>
        <tr>
          <th style="width: 20%;">体長</th>
          <td><%= @animal.body_length %></td>
        </tr>
        <tr>
          <th style="width: 20%;">体重</th>
          <td><%= @animal.body_weight %></td>
        </tr>
        <tr>
          <th style="width: 20%;">特徴</th>
          <td><%= @animal.feature %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row pt-5">
    <div class="col-12">
      <div class="text-center mt-3">
        <%= link_to "編集する", edit_admin_animal_path(@animal), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>