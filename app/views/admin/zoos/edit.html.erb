<div class="container pt-5">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center">動物園情報の編集</h3>
      <%= form_with model: @zoo, url: admin_zoo_path(@zoo), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :動物園画像 %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :動物園名 %>
          <%= f.text_field :name, placeholder: "動物園名", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :動物園説明 %>
          <%= f.text_area :description, rows: 5, placeholder: "動物園説明", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :地方 %>
          <%= f.collection_select :region, regions_for_select, :to_s, :humanize, { prompt: '選択してください' }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, placeholder: "住所", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :開園時間 %>
          <%= f.text_field :opening_hours, placeholder: "開館時間", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :休園日 %>
          <%= f.text_field :closing_day, placeholder: "休園日", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :入園料 %>
          <%= f.text_field :admission, placeholder: "入園料", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number, placeholder: "電話番号", class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
          <%= link_to '保存せずに戻る', admin_zoo_path(@zoo), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>