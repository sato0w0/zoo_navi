<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 col-sm-3">
      <h3 class="text-center">動物園一覧</h3>
    </div>
    <div class="col-md-7 col-sm-7"></div>
    <div class="col-md-2 col-sm-6 text-center">
      <%= link_to new_admin_zoo_path, class: "btn" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
  <table class="table table-borderless border-bottom border-top mt-4 bg-light">
    <thead class="thead-light">
      <tr>
        <th>動物園ID</th>
        <th>動物園名</th>
        <th>動物園説明</th>
      </tr>
    </thead>
    <tbody>
      <% @zoos.each do |zoo| %>
        <tr>
          <td><%= zoo.id %></td>
          <td><%= link_to zoo.name, admin_zoo_path(zoo) %></td>
          <td><%= zoo.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>