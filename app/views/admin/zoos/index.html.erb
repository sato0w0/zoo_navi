<div class="container pt-5">
  <div class="row">
    <div class="col-2">
      <h3>動物園一覧</h3>
    </div>
    <div class="col-2">
      <%= link_to "新規登録", new_admin_zoo_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row pt-4">
    <div class="col-12">
      <table class="table bg-light">
        <thead class="thead-light">
          <tr>
            <th style="width: 5%;">ID</th>
            <th style="width: 25%;">動物園名</th>
            <th style="width: 70%;">動物園説明</th>
          </tr>
        </thead>
        <tbody>
          <% @zoos.each do |zoo| %>
            <tr>
              <td><%= zoo.id %></td>
              <td><%= link_to zoo.name, admin_zoo_path(zoo) %></td>
              <td><%= zoo.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>