<div class="container">
  <div class="row mt-4">
    <div class="col-md-4">
      <h3 class="text-center">動物園の詳細</h3>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 mx-auto">
      <%= image_tag @zoo.get_image(200, 130) %>
    </div>
    <div class="col-md-8">
      <table class="col-md-7 col-sm-5 mx-auto">
        <tr>
          <th>動物園名</th>
          <td><%= @zoo.name %></td>
        </tr>
        <tr>
          <th>動物園説明</th>
          <td><%= @zoo.description %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="text-center mt-3">
    <%= link_to "編集する", edit_admin_zoo_path(@zoo), class: "btn btn-success" %>
  </div>
</div>