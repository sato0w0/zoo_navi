<div class='container pt-5'>
  <div class='row pt-4'>
    <div class="col-3"></div>
    <div class="col-6">
      <%= form_with model: @animal_type, url: admin_animal_type_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :種類名 %>
          <%= f.text_field :name, placeholder: "種類名", class: "form-control"  %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
      <% end %>
          <%= link_to '保存せずに戻る', admin_animal_types_path, class: "btn btn-danger" %>
        </div>
    </div>
  </div>
</div>