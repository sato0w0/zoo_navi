<div class="container pt-5">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h3>動物の種類一覧・追加</h3>
    </div>
  </div>

  <%= form_with model: @animal_type, url: admin_animal_types_path do |f| %>
    <div class="row pt-5">
      <div class="col-3"></div>
      <div class="col-1">
        <%= f.label :name, '種類名' %>
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
      <div class="col-1">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>

  <div class="row pt-4">
    <div class="col-3"></div>
    <div class="col-5">
      <table class="table bg-light">
        <thead class="thead-light">
          <tr>
            <th style="width: 70%;">種類</th>
            <th style="width: 30%;"></th>
          </tr>
        </thead>
        <tbody>
          <% @animal_types.each do |animal_type| %>
            <tr>
              <td><%= animal_type.name %></td>
              <td><%= link_to "編集する", edit_admin_animal_type_path(animal_type), class: 'btn btn-sm btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>