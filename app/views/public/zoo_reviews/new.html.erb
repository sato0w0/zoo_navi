<div class='container pt-3'>
  <div class="row">
    <div class="col-12">
      <h3 class="text-center">レビュー投稿</h3>
      <% if @zoo_review.errors.any? %>
        <%= @zoo_review.errors.count %>件のエラーが発生しました
        <ul>
          <% @zoo_review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= render 'form', zoo_review: @zoo_review %>
    </div>
  </div>
</div>