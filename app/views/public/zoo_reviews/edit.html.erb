<div class='container pt-5'>
  <div class='row'>
    <div class="col-12">
      <%= form_with model:@zoo_review, url: zoo_zoo_review_path(@zoo),local:true do |f| %>
        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control zoo_review_title' %>
        </div>

        <div class="form-group">
          <%= f.label :本文 %>
          <%= f.text_area :body, rows:'5', class: 'form-control zoo_review_body' %>
        </div>

        <div class="form-group">
          <%= f.submit "コメントを保存", class: 'btn btn-success' %>
          <%= link_to '保存せずに戻る', zoo_zoo_review_path(@zoo, @zoo_review), class: "btn btn-danger zoo_review_#{@zoo_review.id}" %>
        </div>
      <% end %>
    </div>
  </div>
</div>