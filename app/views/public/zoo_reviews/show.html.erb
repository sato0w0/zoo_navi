<div class='container pt-5'>
  <div class='row'>
    <div class='col-12'>
      <h2>レビュー詳細</h2>
      <div class="review-title">
        <h3><%= @zoo_review.title %></3>
      </div>

      <div class="review-rate">
        <%= render "static_rate", zoo_review: @zoo_review %>
      </div>

      <div class="user-nickname">
        <%= link_to(@zoo_review.user) do %>
          <%= @zoo_review.user.nickname %>
        <% end %>
      </div>

      <div class="review-body">
        <p>
          <% if @zoo_review.body.length <= 200 %>
            <%= @zoo_review.body %>
          <% else %>
            <%= truncate(@zoo_review.body, length: 200) %>
            <%= link_to "もっと読む", zoo_zoo_review_path(@zoo_review.zoo, @zoo_review) %>
          <% end %>
        </p>
      </div>

      <div class="review-comments-counter">
        <%= render "public/review_comments/counter", zoo_review: @zoo_review %>
      </div>

      <% if @zoo_review.user == current_user %>
        <div class="edit-btn">
          <%= link_to 'Edit', edit_zoo_zoo_review_path(@zoo_review.zoo, @zoo_review), class: "btn btn-sm btn-success edit_zoo_review_#{@zoo_review.id}" %>
        </div>
        <div class="destroy-btn">
          <%= link_to 'Destroy', zoo_zoo_review_path(@zoo_review.zoo, @zoo_review), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_zoo_review_#{@zoo_review.id}" %>
        </div>
      <% end %>

      <div class="review-comments-form">
        <%= render "public/review_comments/form", zoo_review: @zoo_review, review_comment: @review_comment %>
      </div>

      <div class="review-comments-index">
        <%= render "public/review_comments/index", zoo_review: @zoo_review %>
      </div>

    </div>
  </div>
</div>