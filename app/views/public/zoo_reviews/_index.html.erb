<table class='table'>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @zoo_reviews.each do |zoo_review| %>
      <tr>
        <th style="width: 30%;"><%= link_to zoo_review.title, zoo_zoo_review_path(zoo_review.zoo, zoo_review), class: "zoo_review_#{zoo_review.id}" %></th>
        <td>
          <% if zoo_review.body.length <= 100 %>
            <%= zoo_review.body %>
          <% else %>
            <%= truncate(zoo_review.body, length: 100) %>
            <%= link_to "もっと読む", zoo_zoo_review_path(zoo_review.zoo, zoo_review) %>
          <% end %>
        </td>
        <td style="width: 15%;"><%= render "public/review_comments/counter", zoo_review: zoo_review %></td>
        <td style="width: 15%;"><%= render "public/zoo_reviews/static_rate", zoo_review: zoo_review %></td>
      </tr>
    <% end %>
  </tbody>
</table>