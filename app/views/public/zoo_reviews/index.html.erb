<div class='container pt-5'>
  <div class='row'>
    <div class='col-3'>
      <h3>レビュー一覧</h3>
    </div>
    <div class='col-7'>
      <%= link_to "新しい順", zoo_zoo_reviews_path(sort: 'created_at DESC') %> | <%= link_to "評価の高い順", zoo_zoo_reviews_path(sort: 'rate DESC') %>
    </div>
    <div class='col-2'>
      <%= link_to 'レビューを投稿', new_zoo_zoo_review_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= render 'index', zoo_reviews: @zoo_reviews%>
    </div>
  </div>
</div>