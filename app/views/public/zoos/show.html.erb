<div class="container">
  <div class="row pt-5">
    <div class="col-xl-10 col-md-9">
      <div class="row">
        <div class="col-sm-4">
          <%= image_tag @zoo.get_image(150, 120) %>
        </div>
        <div class="col-sm-8">
          <h4><%= @zoo.name %></h4>
          <p><%= @zoo.description %></p>
        </div>
      </div>
    </div>
  </div>


  <div class="row pt-5">
    <h3 class="text-center">見られる動物</h3>
  </div>
  <div class="row pt-5">
    <% @zoo_animals.each do |zoo_animals| %>
      <div class="col-sm-3">
        <p>
          <%= image_tag zoo_animals.animal.get_image(120, 80) %>
        </p>
        <div><%= zoo_animals.animal.name %></div>
      </div>
    <% end %>
  </div>

</div>