<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <%= image_tag @zoo.get_image(1000, 1000), class: "img-fluid rounded mb-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h2><%= @zoo.name %></h2>
      <p><%= @zoo.description %></p>
    </div>
  </div>

  <div class="row pt-5">
    <div class="col-12">
      <h4>施設情報</h4>
      <table class="table">
        <tr>
          <th>住所</th>
          <td><%= @zoo.address %></td>
        </tr>
        <tr>
          <th>営業時間</th>
          <td><%= @zoo.opening_hours %></td>
        </tr>
        <tr>
          <th>定休日</th>
          <td><%= @zoo.closing_day %></td>
        </tr>
        <tr>
          <th>料金</th>
          <td><%= @zoo.admission %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @zoo.telephone_number %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pt-5">
    <div class="col-12">
      <h3 class="text-center">園内の動物たち</h3>
    </div>
  </div>
  <div class="row pt-5">
    <% @zoo_animals.each do |zoo_animals| %>
      <div class="col-2">
        <%= link_to animal_path(zoo_animals.animal) do %>
          <%= image_tag zoo_animals.animal.get_image(120, 80), style: "border-radius: 50%;" %>
        <% end %>
        <div><%= zoo_animals.animal.name %></div>
      </div>
    <% end %>
  </div>
</div>