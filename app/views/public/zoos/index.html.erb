<div class="container pt-3">
  <% @zoos.group_by(&:region).each do |region, zoos| %>
    <div class="row pt-4">
      <div class="col-12 pt-2">
        <h4 class="border-bottom border-warning"><%= region %></h4>
      </div>
    </div>
    <div class="row">
      <% zoos.each do |zoo| %>
        <div class="col-12 pt-2">
          <%= link_to zoo_path(zoo), class: "btn btn-primary btn-lg btn-block text-left border border-dark" do %>
            <%= zoo.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>