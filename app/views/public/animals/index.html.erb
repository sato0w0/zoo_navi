<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <%= render "admin/animal_types/search_animal_type", animal_types: AnimalType.all %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if params[:name].nil? %>
        <h4 class="mb-4">動物一覧</h4>
      <% else %>
        <h4 class="mb-4"><%= params[:name] %>一覧</h4>
      <% end %>
      <div class="row">
        <% @animals.each do |animal| %>
          <div class="col-3 mb-4">
            <div class="card">
              <%= link_to animal_path(animal) do %>
                <%= image_tag animal.get_image(240, 160), class: "card-img-top", style: "object-fit: cover; height: 160px;" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= animal.name %></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>