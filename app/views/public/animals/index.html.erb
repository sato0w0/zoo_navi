<div class="container">
  <div class="row pt-5">
    <div class="col-xl-2 col-md-3">
      <%= render "admin/animal_types/search_animal_type", animal_types: AnimalType.all %>
    </div>
    <div class="col-xl-10 col-md-9">
      <% if params[:name].nil? %>
        <h4 class="d-inline-block">動物一覧</h4>
      <% else %>
        <h4 class="d-inline-block"><%= params[:name] %>一覧</h4>
      <% end %>
      <div class="row">
        <% @animals.each do |animal| %>
          <div class="col-sm-3">
            <p>
              <%= link_to animal_path(animal) do %>
                <%= image_tag animal.get_image(120, 80) %>
              <% end %>
            </p>
            <div><%= animal.name %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>