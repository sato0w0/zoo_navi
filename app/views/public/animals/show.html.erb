<div class="container">
  <div class="row pt-5">
    <div class="col-xl-2 col-md-3">
      <%= render "admin/animal_types/search_animal_type", animal_types: AnimalType.all %>
    </div>
    <div class="col-xl-10 col-md-9">
      <div class="row">
        <div class="col-sm-4">
          <%= image_tag @animal.get_image(150, 120) %>
        </div>
        <div class="col-sm-8">
          <h4><%= @animal.name %></h4>
          <p><%= @animal.animal_type.name %></p>
        </div>
      </div>
    </div>
  </div>
</div>